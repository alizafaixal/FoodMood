    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
   <link rel="stylesheet" href="../css/main.css">
  
    
</head>
<body>
    <main class="admin">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="/">FoodMood</a>
              
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="../contactus.html">Contact</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/admin">Admin</a>
                  </li>
                </ul>
               
              </div>
            </div>
          </nav>
          <div class="container shadow p-3 mt-5 mb-5 bg-white rounded ">
              <h1 class="text-center mt-2 mb-2">Admin Page</h1>
              <hr>
            <div class="d-flex align-items-start ">
              <div class="nav flex-column nav-pills me-3 p-5 shadow bg-white rounded" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <button class="nav-link active" id="v-pills-articles-tab" data-bs-toggle="pill" data-bs-target="#v-pills-articles" type="button" role="tab" aria-controls="v-pills-articles" aria-selected="true">Articles</button>
                <button class="nav-link" id="v-pills-inquiry-tab" data-bs-toggle="pill" data-bs-target="#v-pills-inquiry" type="button" role="tab" aria-controls="v-pills-inquiry" aria-selected="false">Inquiry</button>
                <button class="nav-link" id="v-pills-callback-tab" data-bs-toggle="pill" data-bs-target="#v-pills-callback" type="button" role="tab" aria-controls="v-pills-callback" aria-selected="false">Callback requests</button>
                <button class="nav-link invisible" id="v-pills-create-tab" data-bs-toggle="pill" data-bs-target="#v-pills-create" type="button" role="tab" aria-controls="v-pills-create" aria-selected="false">Create Article</button>
                <button class="nav-link invisible" id="v-pills-update-tab" data-bs-toggle="pill" data-bs-target="#v-pills-update" type="button" role="tab" aria-controls="v-pills-update" aria-selected="false">Update Article</button>
                
              </div>
              <div class="tab-content shadow bg-white rounded w-78 p-4" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="v-pills-articles" role="tabpanel" aria-labelledby="v-pills-articles-tab">
                  <button class="btn btn-primary addArticleBtn mb-3">Add Article</button>
                    <table class="table  articles-list">
                        
                      </table>
                </div>
                <div class="tab-pane fade" id="v-pills-inquiry" role="tabpanel" aria-labelledby="v-pills-inquiry-tab">
                  <table class="table  inquiry-list">
                        
                  </table>
                </div>
                <div class="tab-pane fade" id="v-pills-callback" role="tabpanel" aria-labelledby="v-pills-callback-tab">
                  <table class="table  callback-list">
                        
                  </table>
                </div>

                <div class="tab-pane fade" id="v-pills-create" role="tabpanel" aria-labelledby="v-pills-create-tab">
                  <h1 class="h1">Create Article</h1>
                  <form class="createForm">
                    <div class="form-group">
                      <label for="title">Title</label>
                      <input type="text" class="form-control" id="title"  placeholder="Title">
                    </div>
                    <div class="form-group">
                      <label for="country">Country</label>
                      <input type="text" class="form-control" id="country"  placeholder="Country">
                    </div>
                    <div class="form-group">
                      <label for="image">Image</label>
                      <input type="text" class="form-control" id="image"  placeholder="URL">
                    </div>
                    <div class="form-group">
                      <label for="text">Short Description</label>
                      <textarea class="form-control" id="text" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                      <label for="longDescription">Long Description:</label>
                      <textarea class="form-control" id="longDescription" rows="3"></textarea>
                    </div>
                   
                  
                    <button type="submit" class="btn btn-dark createbtn">Create Article</button>
                  </form>
                </div>
                <div class="tab-pane fade" id="v-pills-update" role="tabpanel" aria-labelledby="v-pills-update-tab">
                  <h1 class="h1 mb-2">Update Article</h1>
                  <form class="updateForm">
                    <div class="form-group mb-2">
                      <label for="title ">Title</label>
                      <input type="text" class="form-control " id="updateTitle"  placeholder="Title">
                    </div>
                    <div class="form-group">
                      <label for="text mb-2">Text</label>
                      <textarea class="form-control" id="updateText" rows="6"></textarea>
                    </div>
                   
                  
                    <button type="submit" class="btn btn-dark updatebtn">Update Article</button>
                  </form>
                </div>
              
              </div>
            </div>
          </div>
       
          <footer class="bg-dark ">
            <p class="footer-p text-center"><em> &copy; 2022- All Copyrights reserver </em></p>
        </footer>
        
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="../admin/js/showArticles.js"></script>
    <script src="../admin/js/createArticle.js"></script>
    <script src="../admin/js/showInquiries.js"></script>
    <script src="../admin/js/showCallbacks.js"></script>
    <script src="../admin/js/deleteArticle.js"></script>
    <script src="../admin/js/deleteCallback.js"></script>
    <script src="../admin/js/deleteInquiry.js"></script>
    <script src="../admin/js/updateArticle.js"></script>
</body>

</html>